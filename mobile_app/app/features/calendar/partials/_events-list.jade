ion-list
  ion-item.gc-schedule(
    ng-click="goToEvent(event)"
    ng-repeat="event in eventsToShow"
  )
    .gc-main
      div
        .gc-schedule-left
          div
            .gc-schedule-icon-wrapper
              img(src="img/icons/workouts-white.png")
        .gc-schedule-middle
          span
            | {{ event.workout_name }}
          .gc-date-wrapper
            img(src="img/icons/schedule.png")
            span.gc-schedule-time
              |  {{ event.begins_at | date : "short" }}
            span.gc-schedule-date
              |  {{ event.ends_at | date: "short" }}
          span.gc-client-name(
            ng-show="isTrainerCalendar"
          )
            | {{ event.person_name }}
          .gc-schedule-note(
            ng-show="event.workout_note"
          )
            | {{ event.workout_note }}
        .gc-schedule-right
          a.gc-schedule-link
            i.icon.ion-chevron-right
        ion-option-button.button-info(
          ng-click="deleteEvent(event.id, $index)"
        )
          img(src="img/icons/message-trash.png")
