.gc-program

  .gc-program-info
    background-color: #303539
    padding: 0px 15px 20px 15px

    .gc-info-title
      color: #adaeaf
      font-size: 10px
      padding-top: 10px

    .gc-info-text
      color: #faf9fa
      font-size: 12px
      line-height: 1.3

  .gc-card
    box-shadow: none
    border: 1px solid #e8e8e8
    border-radius: 3px

    &:empty
      display: none

    .gc-card-title
      background-color: #e8e8e8
      color: #5f5f5f
      font-size: 14px
      padding: 10px 16px

    .gc-card-content
      background-color: #f9f9f9
      color: #3a99d8
      font-size: 14px

      .ion-chevron-right
        position: absolute
        right: 15px