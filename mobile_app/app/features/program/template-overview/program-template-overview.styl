.gc-workout

  .gc-empty-program-overview
    height: 80%

  .overview-nav-buttons
    margin: 35px 0 50px
    padding: 15px

    .overview-nav-button
      font-size: 11px
      color: #459dd9
      width: 48%
      border: 1px solid #459dd9
      text-transform: none
      text-align: center
      height: 37px
      border-radius: 18px
      line-height: 2
      padding-top: 6px

      &.overview-nav-button-disabled
        color: #d0d0d0;
        border: 1px solid #d0d0d0;

    .overview-nav-button:nth-child(3),
    .overview-nav-button:nth-child(4)
      margin-left: 4%
