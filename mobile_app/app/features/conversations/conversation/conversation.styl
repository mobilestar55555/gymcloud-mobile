.gc-conversation-page
  overflow: visible

  .gc-tabs

    .gc-empty-content
      height: 80vh
      display: flex
      align-items: center
      justify-content: center
      flex-direction: column

      img
        height: 30px

      span
        margin: 20px 0
        text-align: center
        width: 220px
        color: #cbcacb

    .tabs
      padding-top: 0
      background: #fff
      height: 58px
      border: none

      .tab-item
        max-width: 100%
        opacity: 1
        border-left: none

        .tab-title
          height: 40px
          font-size: 11px
          color: #BBBBBB
          background: #fff
          border-bottom: 1px solid transparent
          width: 100%
          display: inline-block
          line-height: 34px
          text-transform: uppercase

      .tab-item-active
        margin-top: 0
        border: none

        .tab-title
          display: inline-block !important
          color: #3a99d8
          border-color: #3a99d8

    .pane
      padding-top: 85px

      .scroll-view
        height: 100%


  .gc-preview-name
    top: -30px
    position: absolute
    border: 1px solid #8c8c8c
    background-color: #8c8c8c
    color: #fff
    border-radius: 5px
    padding: 2px 5px

  .message-attachment

    img
      max-width: 100%

  .gc-video-uploading
    color: #ababab
    font-size: 10px