ion-view.gc-conversation-page(hide-back-button="true")
  ion-nav-buttons(side="left")
    button.gc-icon.gc-hamburger(menu-toggle="left")
  ion-nav-title
    | {{ conversationRecipient }}

  ion-tabs.tabs-top.gc-tabs
    ion-tab(
      title="General"
      on-select="fetchMessages(1)"
    )
      ion-content.has-header.has-footer(
        has-bouncing="true"
        delegate-handle="userMessageScroll"
      )
        ng-include(
          src="'features/conversations/partials/_messages.html'"
        )
      ng-include(
        src="'features/conversations/partials/_send-form.html'"
      )

    ion-tab(
      title="Workout"
      on-select="fetchMessages(2)"
    )
      ion-content.has-header.has-footer(
        has-bouncing="true"
        delegate-handle="userMessageScroll"
      )
        ng-include(
          src="'features/conversations/partials/_messages.html'"
        )
      ng-include(
        src="'features/conversations/partials/_send-form.html'"
      )

    ion-tab(
      title="Nutrition"
      on-select="fetchMessages(3)"
    )
      ion-content.has-header.has-footer(
        has-bouncing="true"
        delegate-handle="userMessageScroll"
      )
        ng-include(
          src="'features/conversations/partials/_messages.html'"
        )
      ng-include(
        src="'features/conversations/partials/_send-form.html'"
      )
