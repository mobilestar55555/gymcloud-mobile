.gc-conversation-page,
.gc-personal-workout-results,
.gc-results-overview

  .message-wrapper
    position: relative
    margin-top: 6px

    &.margin-message-with-program
      margin-bottom: 60px

    &.margin-message-without-program
      margin-bottom: 30px

    &:last-child
      padding-bottom: 98px

    .chat-bubble
      color: #5f5f5f
      border-radius: 5px
      display: inline-block
      padding: 10px 18px
      position: relative
      margin: 10px
      min-width: 55%
      max-width: 80%

      &:before
        content: "\00a0"
        display: block
        height: 16px
        width: 9px
        position: absolute
        top: -7.5px

      &.left
        background-color: #f2f2f2
        float: left

      &.left:before
        background-color: #f2f2f2
        left: 10px
        -webkit-transform: rotate(-55deg) skew(5deg)

      &.right
        background-color: #e7f7ff
        float: right

      &.right:before
        background-color: #e7f7ff
        right: 10px
        -webkit-transform: rotate(55deg) skew(-5deg)

      .message
        font-size: 14px

      .message-detail
        white-space: nowrap
        color: #ababab
        font-size: 10px

        span
          float: right

        img
          float: left
          width: 15px
          margin-top: 3px

      .gc-event-info
        display: none
        background: #459dd9
        color: #fff
        width: 100%
        position: absolute
        right: 0px
        bottom: -28px
        padding-left: 17px
        line-height: 30px

        &.gc-workout-info
          bottom: -57px

        &.visible-info
          display: flex

          .icon
            height: 16px
            line-height: 16px
            font-size: 16px
            color: #959698
            text-align: center
            margin: 6px 10px 0 0

          .side-menu-icon-workout
            width: 16px

        &.gc-info-bordered
          border-bottom-left-radius: 5px
          border-bottom-right-radius: 5px

  /* allows the bar-footer to be elastic /*
  /* optionally set a max-height */
  /* maxlength on the textarea will prevent /*
  /* it from getting too large also */
  .bar-footer
    overflow: visible !important

    textarea
      resize: none
      height: 25px
      line-height: 20px
      width: 100%

  /* add this to keep your footer buttons down
  at the bottom as the textarea resizes */
  .footer-btn-wrap
    position: relative
    height: 100%
    width: 50px
    top: 7px

    .footer-btn
      position: absolute !important
      bottom: 0
      color: #3a99d8
      border: none
      background: #f8f8f8

    .footer-btn[disabled]
      color: #808080

  .gc-attachment-msg-btn
    position: relative
    height: 100%
    bottom: -2px
    width: 20px

    img
      width: 11px
      height: 11px

  .bar.item-input-inset

    .item-input-wrapper

      input
        width: 100% !important

  input,
  textarea,
  .item-input,
  .item-input-wrapper
    background-color: #f4f4f4 !important

  .cf
    clear: both !important

.gc-comments-no-padding
  .message-wrapper
    &:last-child
      padding-bottom: 0