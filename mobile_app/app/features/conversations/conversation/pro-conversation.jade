ion-view.gc-conversation-page
  ion-nav-title
    | {{ conversationRecipient }}

  ion-tabs.tabs-top.gc-tabs
    ion-tab(
      title="General"
      on-select="fetchMessages(1)"
    )
      ion-content.has-header.has-footer(
        has-bouncing="true"
        delegate-handle="userMessageScroll"
      )
        ion-refresher(
          pulling-text="Pull to load more..."
          on-refresh="loadMoreMessages(1)"
        )
        ng-include(
          src="'features/conversations/partials/_messages.html'"
        )
      ng-include(
        src="'features/conversations/partials/_send-form.html'"
      )

    ion-tab(
      title="Workout"
      on-select="fetchMessages(2)"
    )
      ion-content.has-header.has-footer(
        has-bouncing="true"
        delegate-handle="userMessageScroll"
      )
        ion-refresher(
          pulling-text="Pull to load more..."
          on-refresh="loadMoreMessages(2)"
        )
        ng-include(
          src="'features/conversations/partials/_messages.html'"
        )
      ng-include(
        src="'features/conversations/partials/_send-form.html'"
      )

    ion-tab(
      title="Nutrition"
      on-select="fetchMessages(3)"
    )
      ion-content.has-header.has-footer(
        has-bouncing="true"
        delegate-handle="userMessageScroll"
      )
        ion-refresher(
          pulling-text="Pull to load more..."
          on-refresh="loadMoreMessages(3)"
        )
        ng-include(
          src="'features/conversations/partials/_messages.html'"
        )
      ng-include(
        src="'features/conversations/partials/_send-form.html'"
      )
