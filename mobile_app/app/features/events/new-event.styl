.gc-workout-schedule-new

  .gc-schedule-save
    background-color: #4db72c
    position: absolute
    bottom: 15px

  .gc-list-wrapper
    .item
      padding: 6px

      span
        padding: 10px
        display: inline-block

    .gc-value
      float: right
      color: #459dd9
      padding: 10px
      line-height: 1.5

.gc-user-event

  .gc-search-list-label
    display: block
    font-size: 14px
    color: #bbb
    margin: 20px 10px 0

  .gc-workout-search-input
    margin: 4px
    width: 100%
    padding: 0 20px

  .gc-workouts-search-list

    input:checked+.radio-content
      .gc-icon-workouts
        display: none

      .radio-icon
        color: #00c13c
        font-size: 15px
        top: 2px
        left: -4px

    .radio-content

      .radio-icon
        left: 0

      .item-content
        padding: 0
        background: #fdfdfd !important

        .gc-icon-workouts
          left: 0
          top: 10px

        .gc-float-left,
        .gc-float-right
          max-width: 100%
          white-space: nowrap
          overflow: hidden
          text-overflow: ellipsis

        .gc-float-left
          padding: 11px 0 11px 25px

        .gc-float-right
          color: #bbb

#start-time,
#start-date,
#end-time
  opacity: 0
  position: fixed
