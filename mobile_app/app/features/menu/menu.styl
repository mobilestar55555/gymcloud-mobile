  .bar-dark
    background: #0a0a0a

  .bar.bar-header

    .title
      text-align: left

  .side-menu-content

    &.gc-empty-menu

      > .list

        > .item
          border-left: 4px solid #282d30
          background: #282d30
          border-bottom: 1px solid rgba(255,255,255,0.1) !important

    .scroll
      padding-bottom: 45px

      > .list
        margin-bottom: 0

        > .item
          background: #282d30
          border-left: 4px solid #282d30

          .list

            > .item
              background: #2b2c30

              > .list

                > .item
                  background: #cccccc

                  > .list

                    > .item
                      background: #eeeeee

    .list

      .item

        &.gc-profile-link
          padding: 12px 13px

          .side-menu-item-text
            padding: 4px 2px

        .gc-sidebar-back-button
          color: #3a99d8
          font-size: 14px
          margin: 0
          line-height: 20px
          min-height: 20px
          height: 20px
          padding: 0

        .gc-sidebar-back-button:before
          font-size: 10px
          margin: 0 24px 0 4px
          line-height: 20px

        .side-menu-item-content

          .gc-avatar-wrapper
            width: 30px
            min-width: 30px
            margin-right: 10px
            height: 30px
            border-radius: 30px
            background-size: 70%

            img
              width: 30px
              height: 30px
              border-radius: 15px

      .active-menu-item
        background: #2d3236 !important
        border-left: 4px solid #34739d !important

      > .item
        border: none
        position: relative
        border-bottom: 2px solid rgba(255,255,255,0.1)
        padding-left: 18px

        > .list
          margin: 16px -16px -16px -16px
          transition: 0.2s all linear
          opacity: 1

        > .list.ng-hide
          opacity: 0

        > .list.ng-hide-add,
        > .list.ng-hide-remove
          display: block !important

      > .item:last-child
        border-bottom: none

      > .item.side-menu-expanded + .item:before
        display: none

      .side-menu-item-content
        display: flex
        display: -webkit-flex
        flex-direction: row
        -webkit-flex-direction: row
        align-items: center
        -webkit-align-items: flex-start
        justify-content: space-between
        -webkit-justify-content: space-between

        .icon
          height: 20px
          line-height: 20px
          font-size: 16px
          color: #959698
          text-align: center
          margin: 1px 10px 0 0

        .side-menu-item-text
          width: 100%
          font-size: 14px
          margin: 0
          color: rgba(255,255,255,0.7)
          padding-left: 11px

        .side-menu-item-action
          width: 24px
          min-width: 24px
          height: 24px
          line-height: 24px
          display: block
          border-radius: 50px
          text-align: center

          .icon
            color: rgba(255,255,255,0.7)
            font-size: 10px
            line-height: 20px

          >.side-menu-icon-action:before
            content: "\f125"

  .bar.bar-footer.bar-balanced
    padding: 20px 0 0
    background: transparent
    background-image: none
    height: 60px
    justify-content: center
    -webkit-justify-content: center
    flex-direction: column
    align-items: center
    z-index: 11

    .button
      background: transparent
      border: 1px solid #3a99d8
      color: #3a99d8
      font-size: 11px
      border-radius: 50px
      width: 145px
      height: 37px
      display: block
      text-align: center
      background: #282d30

      .icon:before
        font-size: 12px

    .version
      margin-top: 10px
      color: #444444

