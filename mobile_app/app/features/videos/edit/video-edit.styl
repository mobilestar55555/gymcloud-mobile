.gc-video-edit
  background: #fff !important

  .video-container
    position: relative
    padding-bottom: 56.25%
    padding-top: 25px
    margin-bottom: 0
    height: 0

    iframe,
    .video-container object,
    .video-container embed
      position:absolute
      top:0
      left:0
      width:100%
      height:100%

  .gc-list-wrapper

    .gc-edit-block-label
      margin-left: 10px
      padding: 5px

    .item
      padding: 16px 5px

      input
        width: 100%

  .gc-delete-button
    position: absolute
    bottom: 0
    left: 0
    border-color: #dd4b39
    text-transform: none
    height: 38px
    border-radius: 19px
    width: 50%
    margin: 0 0 20px 25%
    font-size: 11px
    background: #dd4b39