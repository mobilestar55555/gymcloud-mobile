.gc-video-library
  background: #f8f8f8

  .gc-empty-page

    .gc-empty-text
      top: 42%

    .gc-empty-btn
      display: block
      color: #3a99d8
      font-size: 11px
      margin: 0 auto
      text-align: center
      text-transform: none
      position: relative
      top: 48%
      border: 1px solid #3a99d8
      border-radius: 50px
      width: 145px
      height: 37px
      background: #fff

.video-container
  position: relative
  padding-bottom: 56.25%
  padding-top: 25px
  margin-bottom: 60px
  height: 0

  .gc-video-uploading
    margin-top: 80px
    text-align: center

  iframe,
  .video-container object,
  .video-container embed
    position:absolute
    top:0
    left:0
    width:100%
    height:100%

  .gc-video-info
    position: absolute
    bottom: -40px
    background: #fff
    width: 100%
    padding: 13px 0 13px 13px
    line-height: 1
    display: flex
    justify-content: space-between

    .gc-video-name
      width: 75%
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis

    .gc-video-other
      width: 20%
      display: flex
      justify-content: space-between

      .gc-video-date
        font-size: 11px
        color: #bbb
        margin-top: 3px

      .gc-context-icon
        height: 15px
        padding: 0 13px

#open-camera
  display: none

.select-video-popup
  .popup
    .popup-buttons
      flex-direction: column
      padding: 0

      .button
        margin: 0
        border-top: 1px solid #bababa
        border-radius: 0px
        color: #007aff