.gc-onboarding-success
  background: url('../img/welcome-bg.png') left top no-repeat
  background-size: cover

  .gc-success-container
    margin: 20px
    height: 80%
    border-radius: 5px
    background-color: #459eda

    span
      color: #fff

    .gc-success-text
      display: block
      font-size: 20px
      text-align: center
      padding-top: 40px
      width: 70%
      margin-left: 15%
      line-height: 1.3

    .gc-whistle
      margin-top: 50px
      margin-left: 35%
      width: 30%

    .gc-instructions
      text-align: center
      margin-top: 55px
      font-size: 20px
      width: 86%
      margin-left: 7%
      line-height: 1.3

    .gc-link
      color: #006CB5

  .gc-btn-bordered

    &.gc-select-button
      position: absolute
      bottom: 0
      left: 0
      border-color: #459dd9
      text-transform: none
      height: 38px
      border-radius: 19px
      width: 50%
      margin: 0 0 20px 25%
      font-size: 11px
      background: #459dd9