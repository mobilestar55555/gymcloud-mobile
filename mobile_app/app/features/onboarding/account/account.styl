.gc-onboarding-account
  background: url('../img/welcome-bg.png') left top no-repeat
  background-size: cover

  .list
    margin: 20px

    .item
      height: 60px

      input:checked+.radio-content
        .item-content
          background: #fff

      .ion-checkmark:before
        border: 1px solid #00c13c
        color: #00c13c
        font-size: 15px
        border-radius: 13px
        width: 25px
        height: 25px
        padding-left: 6px
        padding-top: 4px
        position: absolute
        right: 15px
        top: 17px

    .item:nth-child(1)
      border-radius: 5px 5px 0 0

    .item:nth-last-child(1)
      border-radius: 0 0 5px 5px

    .item-content
      padding-left: 64px

  .gc-hint
    position: absolute
    bottom: 15%
    width: 50%
    text-align: center
    color: #bbb
    margin-left: 25%

  .gc-btn-bordered

    &.gc-select-button
      position: absolute
      bottom: 0
      left: 0
      border-color: #459dd9
      text-transform: none
      height: 38px
      border-radius: 19px
      width: 50%
      margin: 0 0 20px 25%
      font-size: 11px
      background: #459dd9