.gc-exercise

  .gc-exercise-description
    font-size: 14px
    padding: 20px 12px 0px 12px
    color: #5f5f5f

  .gc-exercise-video
    position: relative
    padding-bottom: 50%
    padding-top: 30px
    height: 0
    overflow: hidden
    margin: 20px 10px 0 10px

    iframe,
    object,
    embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%

  .gc-personal-best
    margin-top: 10px

    .gc-definition-time
      > span
        display: inline-block
        font-size: 10px
        color: #bbbbbb
        line-height: 1

    .gc-properties
      padding: 0

      > div
        background-color: #e8e8e8
        margin: 10px
        padding: 0
        color: #303539
        text-align: center

      .gc-property-value
        padding: 10px 0
        font-size: 25px
        font-weight: bold

      .gc-property-name
        font-size: 9px
        text-transform: uppercase
        line-height: 1
        padding-bottom: 10px
