.invite-pro
  
  .gc-page-content
    margin-top: 25%

    .gc-invitation-form
      width: 100%
      height: 84%
      display: flex
      flex-direction: column
      align-items: center
      justify-content: flex-start
      padding-top: 30px

      img
        width: 65px

      .gc-hint
        color: #5f5f5f
        width: 70%
        text-align: center
        margin: 20px 0 30px

      label
        width: 100%

        input
          width: 100%
          
      label:nth-child(7)
        border-bottom-left-radius: 5px
        border-bottom-right-radius: 5px

      .gc-email-button
        color: #459dd9
        align-self: flex-end
        margin: 25px 10px 0 0

      .gc-error
        align-self: flex-start
        margin-left: 10px

    .gc-submit-btn
      color: #459dd9
      background: #fff
      width: calc(100% - 20px)
      margin: 0