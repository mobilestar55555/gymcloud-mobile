.gc-sign-in
  background: url('../img/welcome-bg.png') left top no-repeat
  background-size: cover

  .gc-sign-in-content
    margin-top: 35%

    .gc-sign-in-buttons
      width: 94%
      margin: 0 0 10px 3%
      flex: inherit

      .gc-btn-bordered
        text-transform: none
        height: 38px
        border-radius: 19px
        width: 48%
        font-size: 10px

        .icon
          font-size: 20px
          line-height: 29px
          margin-right: 2px

        &.gc-facebook-sign-in
          background: #1f57b5
          border-color: #1f57b5
          float: left

          div
            line-height: 29px
            display: inline-block
            vertical-align: bottom

        &.disabled
          background: #6F6F6F
          border-color: #6F6F6F

        &.gc-google-sign-in
          background: #dd4b39
          border-color: #dd4b39
          float: right

          div
            line-height: 29px
            display: inline-block
            vertical-align: bottom

        &.disabled
          background: #6F6F6F
          border-color: #6F6F6F

    .gc-sign-in-buttons-disabled

      .gc-btn-bordered

        &.gc-facebook-sign-in
          background: #6F6F6F
          border-color: #6F6F6F

        &.gc-google-sign-in
          background: #6F6F6F
          border-color: #6F6F6F

    .gc-sign-in-form

      input
        margin-bottom: 5px
        border-radius: 3px
        height: 40px
        padding: 10px
        font-size: 13px
        width: 94%
        margin-left: 3%

      .gc-btn-bordered

        &.gc-sign-in-button
          border-color: #459dd9
          text-transform: none
          height: 38px
          border-radius: 19px
          width: 50%
          margin: 30px 0 0 25%
          font-size: 11px
          background: #459dd9

      .gc-error
        margin: 0 0 5px 3%
        display: inline-block

    .gc-forgot-password-link
      color: #fdfdfd
      font-size: 11px
      text-align: center
      text-decoration: none

    .gc-sign-in-error
      font-size: 12px
