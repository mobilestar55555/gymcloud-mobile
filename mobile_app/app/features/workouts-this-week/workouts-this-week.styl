.gc-this-week-trainer-workout

  .day-workout-title
    margin: 8px 0 0
    padding: 8px 16px 13px
    border-bottom: 1px solid #E6E2E2

    h2
      display: block
      float: left
      margin: 0
      padding: 0
      font-size: 16px
      font-weight: 400
      color: #5f5f5f

  .badge
    position: absolute
    right: 16px
    height: 23px
    width: 23px
    border-radius: 50%
    color: #fff

    &-gray
      background-color: #bbb

    &-blue
      background-color: #459dd9

  .scheduled-workout-time
    display: inline-block
    position: relative
    float: right
    font-size: 12px

    span
      display: block
      text-align: right

      &.date
        color: #bbb