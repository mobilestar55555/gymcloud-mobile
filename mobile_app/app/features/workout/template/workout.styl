.gc-workout

  .gc-workout-info
    position: relative
    padding: 10px 15px 15px 15px
    background-color: #303539
    z-index: 1

    .gc-info-title
      color: #adaeaf
      font-size: 10px
      text-transform: capitalize

    .gc-info-text
      color: #faf9fa
      font-size: 12px
      line-height: 1.3
      margin-bottom: 10px

    .gc-show-video
      display: flex
      padding: 10px 0

      img
        width: 28px
        height: 23px

      div
        color: #3f99d6
        line-height: 23px
        margin-left: 15px

    .gc-workout-video
      position: relative
      padding-bottom: 50%
      padding-top: 30px
      overflow: hidden

      iframe,
      object,
      embed
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%

    .gc-hide-video
      color: #3f99d6
      margin-top: 15px

  .gc-workout-buttons
    margin: 5px 0 0
    color: #3f99d6

    > div
      position: relative
      background: #fff

      .gc-icon-calendar
        left: 35px
        top: 13px

      .gc-icon-add
        left: 18px
        top: 13px

      > div
        margin-left: 15px
        line-height: 39px

  .gc-workout-exercises-wrapper
    background: #fff
    position: relative
    z-index: 2
    padding-top: 1px
    min-height: 300px

    .gc-list-wrapper

      .list

        .item
          min-height: 54px
          padding: 5px
          display: flex
          align-items: center

          .gc-workout-order
            width: 26px
            height: 26px
            border-radius: 26px
            display: inline-block
            text-align: center
            font-size: 11px
            color: #fff
            margin-left: 10px
            line-height: 26px

            img
              width: 15px
              vertical-align: sub

          .gc-exercise-name
            display: inline-block
            margin-left: 5px
            max-width: 69%
            text-overflow: ellipsis
            overflow: hidden

          .gc-training-note
            color: #bbbbbb
            font-size: 10px
            margin-top: -5px
            white-space: normal
            line-height: 1.5

          .gc-exercise-properties
            display: inline-block
            color: #bbbbbb
            font-size: 10px
            line-height: 1

            .gc-property-value
              color: #5f5f5f

.assign-link
  color: #3a99d8
  text-decoration: none
  margin: 6px 10px 0 0
  display: inline-block
