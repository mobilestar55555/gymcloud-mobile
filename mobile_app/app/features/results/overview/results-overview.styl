.gc-results-overview

  .gc-overview-container
    display: flex
    justify-content: space-between
    background-color: #f6f6f6

    .gc-big-checkbox
      width: 50px
      height: 50px
      margin: 30px 30px 0 0

    .gc-overview-info
      padding: 10px

      .overview-item
        height: 30px
        line-height: 30px

      .gc-user-overview-user-info
        display: flex

        .gc-avatar-wrapper
          width: 30px
          min-width: 30px
          margin: 0 10px
          height: 30px
          border-radius: 30px
          background-size: 70%

          img
            width: 30px
            height: 30px
            border-radius: 15px

      .gc-workout-name
        font-size: 15px
        font-weight: bold
        line-height: 30px
        margin-left: 30px

      .gc-label
        font-size: 12px
        color: #bebebe

  .gc-exercise-title
    position: relative
    display: flex
    justify-content: space-between
    padding: 10px
    height: 40px
    border-color: #ddd
    background-color: #ffffff
    color: #5f5f5f
    height: auto

    .gc-exercise-overview-info
      width: auto

    .gc-results-info
      display: table
      width: auto
      margin-top: -4px

      >div
        display: table-row
        justify-content: space-around
        line-height: 35px

        > div
          display: table-cell
          text-align: center
          padding: 0 5px

      .gc-property-name
        font-size: 12px
        color: #bebebe

      .gc-property-value
        font-size: 25px
        font-weight: bold
        color: #303539

    .gc-order-name
      position: absolute
      top: 10px
      left: 16px
      width: 26px
      height: 26px
      border-radius: 13px
      font-size: 11px
      color: #fff
      line-height: 26px
      text-align: center

    .gc-exercise-name
      padding-left: 40px
      font-size: 15px
      line-height: 26px
      overflow: hidden
      text-overflow: ellipsis

    .icon
      position: absolute
      top: 10px
      right: 15px
      font-size 17px

  .gc-results-overview-buttons
    display: flex
    justify-content: space-around
    margin: 20px 0

    div
      border: 1px solid #3a99d8
      color: #3a99d8
      font-size: 17px
      line-height: 38px
      border-radius: 50px
      width: 170px
      height: 40px
      display: block
      text-align: center

    .gc-icon-comments
      background: url('../img/icons/ic_comment.png') no-repeat
      width: 16px
      height: 18px
      margin-left: -29px
      margin-top: 10px