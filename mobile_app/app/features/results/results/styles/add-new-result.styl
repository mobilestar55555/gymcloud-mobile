.gc-result-buttons
  text-align: center
  margin: 10px 0
  background: transparent
  box-shadow: none

  .item
    padding: 10px
    margin-bottom: 10px
    line-height: 14px
    box-shadow: 0 1px 3px rgba(0,0,0,.3)

  .item:last-child
    margin-bottom: 0px

  .gc-results-cross-btn
    margin-right 10px
    display: inline-block

  .gc-results-btn-text
    color: #459dd9
    font-size: 14px
    display: inline-block
    vertical-align: super