.gc-exercise-results
  .gc-exercise-results-content,
  .gc-exercise-new-result

    .gc-result-card
      margin: 10px 0

    .gc-exercise-result
      padding: 5px 10px

      .gc-result-header
        font-size: 12px
        color: #d0d0d0
        padding: 5px 0 10px

        .gc-result-time
          padding: 0

        .gc-result-personal-best
          width: 70%
          color: #459dd9

          .gc-icon-personal-best,
          .gc-icon-personal-best-active
            margin-top: 14px

          .gc-float-left
            padding-left: 15px

        .gc-delete-result
          width: 30%
          color: #459dd9

      .gc-properties
        padding: 5px 0

        .gc-property-name
          font-size: 19px
          color: #5f5f5f

        .gc-property-value
          font-size: 25px
          font-weight: bold
          color: #303539
          background-color: #f0f0f0
          width: 80px
          height: 50px
          text-align: center
          line-height: 50px