.gc-personal-workout-results
  background-color: #3f91c9

  ion-content
    background-color: #2e80b8
    margin-bottom: 49px

    &.gc-results-no-margin
      margin-bottom: 0

  .list
    .item
      &.item-accordion
        line-height: 38px
        padding-top: 0
        padding-bottom: 0
        transition: 0.09s all linear
        background-color: #3f91c9
        border-color: #3f91c9

        &.ng-hide
          line-height: 0px

        &.ng-hide-add,
        &.ng-hide-remove
          display: block !important

      .gc-no-properties
        color: #fff
        text-align: center

  .gc-exercise-title
    position: relative
    padding: 10px
    height: 40px
    border-color: #459dd9
    background-color: #2e80b8
    color: #fff

    &.item.active.item-stable,
    &.item.activated.item-stable
      border-color: #459dd9
      background-color: #3f91c9

    &.active
      background-color: #3f91c9

    .item
      padding: 0

    .gc-order-name
      position: absolute
      top: 10px
      left: 16px
      width: 18px
      height: 18px
      border-radius: 9px
      font-size: 9px
      line-height: 1
      text-align: center
      padding-top: 4px

    .gc-exercise-name
      padding-left: 35px
      font-size: 15px
      max-width: 85%
      overflow: hidden
      text-overflow: ellipsis

    .icon
      position: absolute
      top: 10px
      right: 15px
      font-size 17px


  .gc-preview-name
    top: -30px
    position: absolute
    border: 1px solid #8c8c8c
    background-color: #8c8c8c
    color: #fff
    border-radius: 5px
    padding: 2px 5px

  .message-attachment

    img
      max-width: 100%

  .gc-video-uploading
    color: #ababab
    font-size: 10px