.tabs
  background-color: #216ea1
  padding: 0
  background-size: 100% 0

  &.gc-move-bar-to-top
    bottom: 44px

  .tab-item
    opacity: 1
    border-left: 1px solid #11639b

    &.gc-disabled-btn
      background: #808080
      border-left: none

    .icon
      height: 20px
      margin-top: 15px

    .gc-results-comments
      display: inline-block

    &.gc-comments-active
      background-color: #2e80b8

    .gc-comments-count
      position: absolute
      top: 10px
      left: 31%
      background: #ff4310
      font-size: 8px
      color: #fff
      line-height: 10px
      height: 12px
      width: 12px
      border-radius: 8px

    .gc-results-timer
      display: inline-block
      height: 12px
      margin: 18px 7px 0 0

    .gc-time
      display: inline-block
      color: #fff

    &.gc-finish-button
      background-color: #52c92d