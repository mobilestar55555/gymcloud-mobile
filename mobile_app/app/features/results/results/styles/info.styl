.gc-exercise-info
  color: #fff
  font-size: 12px

  .gc-note
    display: block
    line-height: 1
    color: #fff
    margin-top: 4px
    padding-bottom: 10px
    white-space: normal

  .gc-exercise-overview
    width: 100px
    text-align: center
    border: 1px solid #fff
    border-radius: 10px
    height: 20px
    line-height: 19px
    margin-bottom: 10px

  .gc-colored-line
    border: 0
    border-top: 1px solid #70bbef

  .gc-properties-types
    text-align: center
    color: #b0cde5

  .gc-property-name
    font-size: 15px

  .gc-property-value
    font-size: 25px
    font-weight: bold
    text-align: center