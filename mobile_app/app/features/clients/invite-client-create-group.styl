.gc-invite-client,
.gc-create-group

  ion-content
    height: 100%
    display: flex
    align-items: center
    flex-direction: column

  .gc-invitation-form,
  .gc-create-group-form
    width: 100%
    height: 84%
    display: flex
    flex-direction: column
    align-items: center
    justify-content: flex-start
    padding-top: 50px

    img
      width: 65px

    .gc-hint
      color: #5f5f5f
      width: 70%
      text-align: center
      margin: 20px 0 40px

    label
      width: calc(100% - 20px)
      margin: 5px 0
      border-radius: 5px
      padding: 10px

      input
        width: 100%

    .gc-email-button
      color: #459dd9
      align-self: flex-end
      margin: 25px 10px 0 0

    .gc-error
      align-self: flex-start
      margin-left: 10px

  .gc-submit-btn
    color: #459dd9
    background: #fff
    width: calc(100% - 20px)
    margin-top: 0
    margin-left: 10px